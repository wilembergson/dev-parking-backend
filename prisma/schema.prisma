// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EmployeeUser {
  id       String @id @db.Uuid()
  name     String
  rg       String @unique()
  email    String @unique()
  password String

  @@map("employee_users")
}

model Customer {
  id       String     @id @db.Uuid()
  name     String
  rg       String     @unique()
  Schedule Schedule[]

  @@map("customer")
}

model Vacancy {
  id           String     @id @db.Uuid()
  localization String     @unique()
  schedule     Schedule[]

  @@map("vacancy")
}

model Schedule {
  id           String    @id @db.Uuid()
  vehiclePlate String
  checkIn      DateTime
  checkOut     DateTime?
  vacancyId    String    @db.Uuid()
  vacancy      Vacancy   @relation(fields: [vacancyId], references: [id])
  customerId   String    @db.Uuid()
  customer     Customer  @relation(fields: [customerId], references: [id])

  @@map("schedule")
}
