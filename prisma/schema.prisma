// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String
  password String
  age      Int

  @@map("users")
}

model Car {
  id       String     @id @default(uuid())
  name     String
  brand    String
  plate    String
  Schedule Schedule[]

  @@map("cars")
}

model Vacancy {
  id           String     @id @default(uuid())
  localization String
  schedule     Schedule[]

  @@map("vacancy")
}

model Schedule {
  id        String    @id @default(uuid())
  checkIn   DateTime
  checkOut  DateTime?
  vacancyId String
  vacancy   Vacancy   @relation(fields: [vacancyId], references: [id])
  carId     String
  car       Car       @relation(fields: [carId], references: [id])

  @@map("schedule")
}
