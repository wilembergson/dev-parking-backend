// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @unique @default(uuid())
  name     String
  email    String
  password String
  age      Int

  @@map("users")
}

model Car {
  id          String        @id @unique @default(uuid())
  name        String
  brand       String
  plate       String        @unique
  Scheduleing Scheduleing[]

  @@map("cars")
}

model Vacancy {
  id           String        @id @unique @default(uuid())
  localization String        @unique
  scheduleing  Scheduleing[]

  @@map("vacancy")
}

model Scheduleing {
  id        String    @id @unique @default(uuid())
  checkIn   DateTime
  checkOut  DateTime?
  vacancyId String
  vacancy   Vacancy   @relation(fields: [vacancyId], references: [id])
  carId     String
  car       Car       @relation(fields: [carId], references: [id])

  @@map("scheduleing")
}
